        </trim>
        where CUST_ID = #{custId}
    </update>

    <delete id="deleteCustomerInfoByCustId" parameterType="Long">
        delete from crm_customer_info where CUST_ID = #{custId}
    </delete>

    <delete id="deleteCustomerInfoByCustIds" parameterType="String">
        delete from crm_customer_info where CUST_ID in
        <foreach item="custId" collection="array" open="(" separator="," close=")">
            #{custId}
        </foreach>
    </delete>

</mapper>